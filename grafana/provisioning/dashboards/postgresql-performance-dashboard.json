{
  "id": null,
  "title": "PostgreSQL Performance Dashboard",
  "tags": ["postgresql", "database", "performance", "replication"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 0,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Database Connection Status",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "red", "value": null},
              {"color": "green", "value": 1}
            ]
          },
          "unit": "short"
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center",
        "orientation": "horizontal",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "auto"
      },
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "pg_up{instance=~\".*\"}",
          "refId": "A",
          "legendFormat": "{{instance}}"
        }
      ]
    },
    {
      "id": 2,
      "title": "Active Connections",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 6, "y": 0},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10,
            "gradientMode": "none",
            "showPoints": "never",
            "spanNulls": false
          },
          "unit": "short",
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 80},
              {"color": "red", "value": 100}
            ]
          }
        }
      },
      "options": {
        "legend": {"displayMode": "list", "placement": "bottom"},
        "tooltip": {"mode": "multi", "sort": "none"}
      },
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "pg_stat_database_numbackends{datname!=\"template0\",datname!=\"template1\"}",
          "refId": "A",
          "legendFormat": "{{instance}} - {{datname}}"
        }
      ]
    },
    {
      "id": 3,
      "title": "Max Connections",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 80},
              {"color": "red", "value": 90}
            ]
          },
          "unit": "short"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center",
        "orientation": "horizontal",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      },
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "pg_settings_max_connections",
          "refId": "A",
          "legendFormat": "{{instance}}"
        }
      ]
    },
    {
      "id": 4,
      "title": "Connection Pool Usage %",
      "type": "gauge",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 4},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "max": 100,
          "min": 0,
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          },
          "unit": "percent"
        }
      },
      "options": {
        "orientation": "auto",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "100 * sum(pg_stat_database_numbackends{datname!=\"template0\",datname!=\"template1\"}) by (instance) / pg_settings_max_connections",
          "refId": "A",
          "legendFormat": "{{instance}}"
        }
      ]
    },
    {
      "id": 5,
      "title": "Query Response Time (Average)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10,
            "gradientMode": "none",
            "showPoints": "never",
            "spanNulls": false
          },
          "unit": "ms",
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 100},
              {"color": "red", "value": 1000}
            ]
          }
        }
      },
      "options": {
        "legend": {"displayMode": "list", "placement": "bottom"},
        "tooltip": {"mode": "multi", "sort": "none"}
      },
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "rate(pg_stat_database_blk_read_time{datname!=\"template0\",datname!=\"template1\"}[5m]) + rate(pg_stat_database_blk_write_time{datname!=\"template0\",datname!=\"template1\"}[5m])",
          "refId": "A",
          "legendFormat": "{{instance}} - {{datname}} I/O Time"
        },
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "rate(pg_stat_statements_mean_time[5m])",
          "refId": "B",
          "legendFormat": "{{instance}} Mean Query Time"
        }
      ]
    },
    {
      "id": 6,
      "title": "Transactions per Second",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10,
            "gradientMode": "none",
            "showPoints": "never",
            "spanNulls": false
          },
          "unit": "tps"
        }
      },
      "options": {
        "legend": {"displayMode": "list", "placement": "bottom"},
        "tooltip": {"mode": "multi", "sort": "none"}
      },
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "rate(pg_stat_database_xact_commit{datname!=\"template0\",datname!=\"template1\"}[5m]) + rate(pg_stat_database_xact_rollback{datname!=\"template0\",datname!=\"template1\"}[5m])",
          "refId": "A",
          "legendFormat": "{{instance}} - {{datname}} Total TPS"
        },
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "rate(pg_stat_database_xact_commit{datname!=\"template0\",datname!=\"template1\"}[5m])",
          "refId": "B",
          "legendFormat": "{{instance}} - {{datname}} Commits"
        },
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "rate(pg_stat_database_xact_rollback{datname!=\"template0\",datname!=\"template1\"}[5m])",
          "refId": "C",
          "legendFormat": "{{instance}} - {{datname}} Rollbacks"
        }
      ]
    },
    {
      "id": 7,
      "title": "Database Size",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10,
            "gradientMode": "none",
            "showPoints": "never",
            "spanNulls": false
          },
          "unit": "bytes"
        }
      },
      "options": {
        "legend": {"displayMode": "list", "placement": "bottom"},
        "tooltip": {"mode": "multi", "sort": "none"}
      },
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "pg_database_size_bytes{datname!=\"template0\",datname!=\"template1\"}",
          "refId": "A",
          "legendFormat": "{{instance}} - {{datname}}"
        }
      ]
    },
    {
      "id": 8,
      "title": "Cache Hit Ratio",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10,
            "gradientMode": "none",
            "showPoints": "never",
            "spanNulls": false
          },
          "unit": "percent",
          "max": 100,
          "min": 0,
          "thresholds": {
            "steps": [
              {"color": "red", "value": null},
              {"color": "yellow", "value": 90},
              {"color": "green", "value": 95}
            ]
          }
        }
      },
      "options": {
        "legend": {"displayMode": "list", "placement": "bottom"},
        "tooltip": {"mode": "multi", "sort": "none"}
      },
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "100 * pg_stat_database_blks_hit{datname!=\"template0\",datname!=\"template1\"} / (pg_stat_database_blks_hit{datname!=\"template0\",datname!=\"template1\"} + pg_stat_database_blks_read{datname!=\"template0\",datname!=\"template1\"})",
          "refId": "A",
          "legendFormat": "{{instance}} - {{datname}} Cache Hit %"
        }
      ]
    },
    {
      "id": 9,
      "title": "Deadlocks and Conflicts",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10,
            "gradientMode": "none",
            "showPoints": "never",
            "spanNulls": false
          },
          "unit": "short"
        }
      },
      "options": {
        "legend": {"displayMode": "list", "placement": "bottom"},
        "tooltip": {"mode": "multi", "sort": "none"}
      },
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "rate(pg_stat_database_deadlocks{datname!=\"template0\",datname!=\"template1\"}[5m])",
          "refId": "A",
          "legendFormat": "{{instance}} - {{datname}} Deadlocks/sec"
        },
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "rate(pg_stat_database_conflicts{datname!=\"template0\",datname!=\"template1\"}[5m])",
          "refId": "B",
          "legendFormat": "{{instance}} - {{datname}} Conflicts/sec"
        }
      ]
    },
    {
      "id": 10,
      "title": "Slow Queries (Top 10)",
      "type": "table",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "align": "auto",
            "displayMode": "auto"
          },
          "unit": "ms"
        }
      },
      "options": {
        "showHeader": true
      },
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "topk(10, pg_stat_statements_mean_time)",
          "refId": "A",
          "format": "table",
          "legendFormat": "{{instance}} - Query: {{queryid}}"
        }
      ]
    },
    {
      "id": 11,
      "title": "Replication Lag (Seconds)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10,
            "gradientMode": "none",
            "showPoints": "auto",
            "spanNulls": false
          },
          "unit": "s",
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 5},
              {"color": "red", "value": 30}
            ]
          }
        }
      },
      "options": {
        "legend": {"displayMode": "list", "placement": "bottom"},
        "tooltip": {"mode": "multi", "sort": "none"}
      },
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "pg_replication_lag_seconds",
          "refId": "A",
          "legendFormat": "{{instance}} Replica: {{client_addr}}"
        }
      ]
    },
    {
      "id": 12,
      "title": "Replication Slot Status",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 32},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "red", "value": null},
              {"color": "green", "value": 1}
            ]
          },
          "unit": "short"
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center",
        "orientation": "horizontal",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "auto"
      },
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "pg_replication_slots_active",
          "refId": "A",
          "legendFormat": "{{instance}} - {{slot_name}}"
        }
      ]
    },
    {
      "id": 13,
      "title": "WAL Files Generated",
      "type": "timeseries",
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 32},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10,
            "gradientMode": "none",
            "showPoints": "never",
            "spanNulls": false
          },
          "unit": "short"
        }
      },
      "options": {
        "legend": {"displayMode": "list", "placement": "bottom"},
        "tooltip": {"mode": "multi", "sort": "none"}
      },
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "rate(pg_stat_archiver_archived_count[5m])",
          "refId": "A",
          "legendFormat": "{{instance}} WAL Files/sec"
        }
      ]
    },
    {
      "id": 14,
      "title": "Lock Waits",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 36},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10,
            "gradientMode": "none",
            "showPoints": "never",
            "spanNulls": false
          },
          "unit": "short"
        }
      },
      "options": {
        "legend": {"displayMode": "list", "placement": "bottom"},
        "tooltip": {"mode": "multi", "sort": "none"}
      },
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "pg_locks_count",
          "refId": "A",
          "legendFormat": "{{instance}} - {{mode}} locks"
        }
      ]
    },
    {
      "id": 15,
      "title": "Vacuum and Analyze Operations",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 40},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10,
            "gradientMode": "none",
            "showPoints": "never",
            "spanNulls": false
          },
          "unit": "short"
        }
      },
      "options": {
        "legend": {"displayMode": "list", "placement": "bottom"},
        "tooltip": {"mode": "multi", "sort": "none"}
      },
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "rate(pg_stat_user_tables_n_tup_ins[5m]) + rate(pg_stat_user_tables_n_tup_upd[5m]) + rate(pg_stat_user_tables_n_tup_del[5m])",
          "refId": "A",
          "legendFormat": "{{instance}} - {{datname}}.{{schemaname}}.{{relname}} Modifications/sec"
        }
      ]
    },
    {
      "id": 16,
      "title": "Buffer Pool Usage",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 40},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10,
            "gradientMode": "none",
            "showPoints": "never",
            "spanNulls": false
          },
          "unit": "bytes"
        }
      },
      "options": {
        "legend": {"displayMode": "list", "placement": "bottom"},
        "tooltip": {"mode": "multi", "sort": "none"}
      },
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "pg_settings_shared_buffers_bytes",
          "refId": "A",
          "legendFormat": "{{instance}} Shared Buffers"
        },
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "pg_buffercache_used_bytes",
          "refId": "B",
          "legendFormat": "{{instance}} Used Buffer Cache"
        }
      ]
    }
  ]
}